@page
@model RazorPagesMovie.Pages.Movies.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Electronic Invoices</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ElectronicInvoice.ID" />

            <!-- InvoiceDate 發票類別 -->
            <div class="form-group">
                <label asp-for="ElectronicInvoice.InvoicePurpose" class="control-label"></label>
                @*<input asp-for="ElectronicInvoice.InvoicePurpose" class="form-control" />*@
                <select asp-for="ElectronicInvoice.InvoicePurpose" class="form-control">
                    @*<option value="== 請選擇 支出/收入 ==">== 請選擇 支出/收入 ==</option>*@
                    <option value="支出">支出</option>
                    <option value="收入">收入</option>
                </select>
                <span asp-validation-for="ElectronicInvoice.InvoicePurpose" class="text-danger"></span>
            </div>

            <!-- InvoiceDate 發票日期 -->
            <div class="form-group">
                <label asp-for="ElectronicInvoice.InvoiceDate" class="control-label"></label>
                <input asp-for="ElectronicInvoice.InvoiceDate" class="form-control" />
                <span asp-validation-for="ElectronicInvoice.InvoiceDate" class="text-danger"></span>
            </div>

            <!-- InvoiceAmount 發票金額 -->
            <div class="form-group">
                <label asp-for="ElectronicInvoice.InvoiceAmount" class="control-label"></label>
                <input asp-for="ElectronicInvoice.InvoiceAmount" class="form-control" />
                <span asp-validation-for="ElectronicInvoice.InvoiceAmount" class="text-danger"></span>
            </div>

            <!-- Create Button -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
